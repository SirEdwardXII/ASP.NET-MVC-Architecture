@model DentalTracks.Web.Models.BaseViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@String.Format("{0}DentalTracks", String.IsNullOrEmpty(Model.PageTitle) ? "" : Model.PageTitle + " - ")</title>
    <link rel="shortcut icon" href="/content/icons/logo-icon.ico" />
    <link rel="icon" href="/content/icons/logo-icon.ico" />

    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/style")

    @RenderSection("styles", required: false)
    @Scripts.Render("~/scripts/jquery")

    @RenderSection("head", required: false)
</head>
<body>
    <header>

        <nav class="site-navbar">
            <div class="site-container">
                <div class="nav-header">
                    <button type="button" class="nav-button">
                        <div class="button-trans">
                            <span></span>
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </button>
                    <a href="/" class="logo"><img src="~/Content/images/nav-logo.png" alt="DentalTracks" /></a>
                    <div class="clearfix"></div>
                </div>

                <div class="nav-collapse">
                    <ul class="nav-menu">
                        <li class="spacer"></li>
                        @for (var menuIndex = 0; menuIndex < Model.MenuItems.Count; menuIndex++)
                        {
                            <li class="nav-menu-option @String.Format("{0}", Model.MenuItems[menuIndex].Active ? "active" : "")"><a href="@Model.MenuItems[menuIndex].NavigateUrl">@Model.MenuItems[menuIndex].Text</a></li>
                            <li class="spacer"></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div style="position: relative; top: 60px;">
        <hr /> <br /> <br />
    </div>
    @RenderBody()
    <footer>
        <div class="site-container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1 col-links">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xs-6">
                                <ul>
                                    <li><a href="#">Navigation</a></li>
                                    <li><a href="#">Navigation</a></li>
                                    <li><a href="#">Navigation</a></li>
                                    <li><a href="#">Navigation</a></li>
                                    <li><a href="#">Navigation</a></li>
                                </ul>
                            </div>
                            <div class="col-xs-6">
                                <ul>
                                    <li><a href="#">Navigation</a></li>
                                    <li><a href="#">Navigation</a></li>
                                    <li><a href="#">Navigation</a></li>
                                    <li><a href="#">Navigation</a></li>
                                    <li><a href="#">Navigation</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-2 col-social">
                    <a href="#"><i class="fa fa-facebook"></i></a>
                    &nbsp;&nbsp;
                    <a href="#"><i class="fa fa-twitter"></i></a>
                </div>
                <div class="col-sm-5 col-form">
                    <p class="find-out">
                        1234 Some St.
                        <br />
                        Some City, ST 12345
                    </p>
                    <p class="tag-text">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    </p>
                    <div class="form-group">
                        <input type="text" placeholder="Enter your email" class="form-control form-control-outline" />
                        <i class="control-overlay fa fa-arrow-right"></i>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @* Used to detect breakpoints *@
    <div class="device-xs visible-xs"></div>
    <div class="device-sm visible-sm"></div>
    <div class="device-md visible-md"></div>
    <div class="device-lg visible-lg"></div>

    @Scripts.Render("~/scripts/bootstrap")
    @Scripts.Render("~/scripts/layout")

    @RenderSection("scripts", required: false)
</body>

</html>