@model ContactIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container body-content">

        <h2> Contacts </h2>
        <hr />
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <div id="success">
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@TempData["createdContact"]</strong>
            </div>
        </div>
        <div style="height: 400px; overflow: auto;">
            <table class="table">
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.contactViewModel.FirstOrDefault().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.contactViewModel.FirstOrDefault().LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.contactViewModel.FirstOrDefault().EmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.contactViewModel.FirstOrDefault().Subject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.contactViewModel.FirstOrDefault().Message)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model.contactViewModel)
            {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailAddress)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>


                    </tr>
                }

            </table>
        </div>
    </div>

    @section scripts{
        <script>
            var createdContact = '@TempData["createdContact"]';

        </script>

        @Scripts.Render("~/scripts/viewContact")

    }
